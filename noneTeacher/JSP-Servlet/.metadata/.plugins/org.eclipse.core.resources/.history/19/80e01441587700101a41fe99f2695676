<script type="text/javascript">
	//type이 변경되면 실행될 이벤트 리스너
	$('#type').on('change', function(){
		//alert('type이 변경');
		let type = $('#type').val();
		$.ajax({
			url: 'JQServlet',
			data: {'type':type},
			datatype: "json",
			success: changeDetail
		});
	});
	
