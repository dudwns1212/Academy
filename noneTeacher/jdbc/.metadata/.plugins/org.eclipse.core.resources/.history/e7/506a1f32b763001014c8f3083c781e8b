getEmpInfoByEmpNameSql=select employee_id,last_name,salary,email,date_format(hire_date,'%Y-%m-%d') from employees where lower(concat(last_name, first_name)) = lower(Replace(?,' ',''))
getEmpInfoByHireYearSql=select employee_id,last_name,salary,email,date_format(hire_date,'%Y-%m-%d') FROM employees where year(hire_date) = ?
getEmpInfoByJobIdSql=select employee_id,last_name,salary,email,date_format(hire_date,'%Y-%m-%d') from employees where job_id = ?
getEmpInfoByDeptIdSql=select employee_id,last_name,salary,email,date_format(hire_date,'%Y-%m-%d') from employees where department_id = ?
getEmpInfoByCityNameSelect=select employee_id,last_name,salary,email,date_format(hire_date,'%Y-%m-%d') from employees e where e.department_id in (select d.department_id from departments d where d.location_id in (select l.location_id from locations l where city = ?))
getEmpInfoByManagerId=select e.employee_id, e.last_name, salary, email, m.last_name from employees e left join employees m on e.manager_id = m.employee_id where m.last_name = ?
getEmpInfoByCountryName=select employee_id,last_name,salary,email,date_format(hire_date,'%Y-%m-%d') from employees e where e.department_id in (select d.department_id from departments d where d.location_id in(select l.location_id from locations l where l.country_id in (select c.country_id from countries c where country_name = ?)))

sumJob=select j.job_id as id, j.job_title as name, format(round(avg(e.salary * (1 + coalesce(e.commission_pct, 0)) * 12 * 1390),-3),0) as avg, format(round(max(e.salary * (1 + coalesce(e.commission_pct, 0)) * 12 * 1390),-3),0) as max, format(round(min(e.salary * (1 + coalesce(e.commission_pct, 0)) * 12 * 1390),-3),0) as min, count(*) as count from employees e join jobs j on e.job_id = j.job_id group by j.job_id order by j.job_id
sumDpId=select d.department_id as id, d.department_name as name, format(round(avg(e.salary * (1 + coalesce(e.commission_pct, 0)) * 12 * 1390),-3),0) as avg, format(round(max(e.salary * (1 + coalesce(e.commission_pct, 0)) * 12 * 1390),-3),0) as max, format(round(min(e.salary * (1 + coalesce(e.commission_pct, 0)) * 12 * 1390),-3),0) as min, count(*) as count from employees e join departments d on e.department_id = d.department_id group by d.department_id order by d.department_id
sumCity=select l.location_id as id, l.city as name, format(round(avg(e.salary * (1 + coalesce(e.commission_pct, 0)) * 12 * 1390),-3),0) as avg, format(round(max(e.salary * (1 + coalesce(e.commission_pct, 0)) * 12 * 1390),-3),0) as max, format(round(min(e.salary * (1 + coalesce(e.commission_pct, 0)) * 12 * 1390),-3),0) as min, count(*) as count from employees e join departments d on e.department_id = d.department_id join locations l on d.location_id = l.location_id group by l.location_id order by l.location_id
sumCountry=select c.country_id as id, c.country_name as name, format(round(avg(e.salary * (1 + coalesce(e.commission_pct, 0)) * 12 * 1390),-3),0) as avg, format(round(max(e.salary * (1 + coalesce(e.commission_pct, 0)) * 12 * 1390),-3),0) as max, format(round(min(e.salary * (1 + coalesce(e.commission_pct, 0)) * 12 * 1390),-3),0) as min, count(*) as count from employees e join departments d on e.department_id = d.department_id join locations l on d.location_id = l.location_id join countries c on l.country_id = c.country_id group by c.country_id order by c.country_id
sumRegion=select r.region_id as id, r.region_name as name, format(round(avg(e.salary * (1 + coalesce(e.commission_pct, 0)) * 12 * 1390),-3),0) as avg, format(round(max(e.salary * (1 + coalesce(e.commission_pct, 0)) * 12 * 1390),-3),0) as max, format(round(min(e.salary * (1 + coalesce(e.commission_pct, 0)) * 12 * 1390),-3),0) as min, count(*) as count from employees e join departments d on e.department_id = d.department_id join locations l on d.location_id = l.location_id join countries c on l.country_id = c.country_id join regions r on c.region_id = r.region_id group by r.region_id order by r.region_id
