package myjdbc;

import java.util.ArrayList;

public class Ex02 {
/*
* 1부터 999까지의 1000개의 임의의 수로 이루어진 배열을 생성하는 함수를
* 호출하여 배열을 생성한다.
- 2.인덱스가 홀수인 수들을 출력하는 함수
- 3.배열의 수들의 합을 반환하는 함수
- 4.가장 작은 수의 위치(인덱스)를 반환하는 함수
- 5.3의 배수만을 새로운 배열에 복사하여 리턴하는 함수


option!
- 배열의 수들을 한 줄에 10개씩 출력하는 함수, 이때 각 수들은 줄이 맞춰져야 함


5번은 List Collection API를 사용하는 것이 더 적절한다.
*/
	public static void main(String[] args) {
	
		int[] list = makeArray();
		oddNumber();
		System.out.println("배열 안의 수들의 합 : " + sumArray());
		System.out.println("가장 작은 수의 인덱스 : " + smallIndex());
		for(int i=0;i<threeNumber().size();i++) {
			System.out.println("3의 배수들 : " + threeNumber().get(i));
		}
	}
	// 1~1000사이의 랜덤숫자 100개가 들어간 배열 생성
	public static int[] makeArray() {
		int[] result = new int[100];
		for(int i=0;i<100;i++) {
			result[i] = (int)(Math.random()*1000) + 1;
		}
		return result;
	}
	// 인덱스번호가 홀수인 수를 출력하는 함수
	public static void oddNumber() {
		System.out.println("인덱스가 홀수인 수");
		int[] result = makeArray();
		for(int i=1;i<100;i+=2) {
			System.out.println(result[i]);
		}
	}
	// 배열의 수들의 합을 반환하는 함수
	public static int sumArray() {
		int[] result = makeArray();
		int count = 0;
		for(int i=0;i<100;i++) {
			count += result[i];
		}
		return count;
	}
	// 가장 작은 수의 위치(인덱스)를 반환하는 함수
	public static int smallIndex() {
		int[] result = makeArray();
		int temp=0;
		int j=0;
		for(int i=0;i<100;i++) {
			temp=result[i];
			for(j=1;j<100;j++) {
				if(temp>result[j]) {
					temp = result[j];
				}
			}
		}
		return j-1;
	}
	// 3의 배수만을 배열에 넣어 리턴하는 함수
	public static ArrayList threeNumber() {
		ArrayList threeNumber = new ArrayList();
		int [] result = makeArray();
		for(int i=0;i<100;i++) {
			if(result[i]/3 == 0) {
				threeNumber.add(result[i]);
			}
		}
		return threeNumber;
	}
	// 배열의 수들을 한 줄에 10개씩 출력하는 함수
	public static void oneLine() {
		int[] result = makeArray();
		for(int i=0;i<10;i++) {
		System.out.print(result[i] + "\t");
		}
		System.out.println();
	}
	
	
	
}
